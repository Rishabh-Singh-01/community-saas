// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id    String  @id
  name  String  @db.VarChar(64)
  email  String  @db.VarChar(128) @unique
  password  String  @db.VarChar(64)
  created_at  DateTime  @default(now())
  communitys Community[]
  members  Member[]
}

model Community{
  id    String  @id
  name  String  @db.VarChar(128)
  slug  String  @db.VarChar(255) @unique
  owner String
  userRln  User  @relation(fields: [owner], references: [id])
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  members Member[]
}

model Role {
  id    String  @id
  name  String  @db.VarChar(64)
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  members  Member[]
}

model Member{
  id  String  @id
  community String
  communityRln  Community @relation(fields: [community], references: [id])
  user  String
  userRln  User @relation(fields: [user], references: [id])
  role  String
  roleRln  Role @relation(fields: [role], references: [id])
  created_at  DateTime  @default(now())
}